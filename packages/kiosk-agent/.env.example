# URL for the kiosk API (production by default)
KIOSK_AGENT_BASE_URL=https://collect.tenkings.co
# Provide either a location ID or slug so the agent knows which kiosk display to follow
KIOSK_AGENT_LOCATION_SLUG=sacramento-kings-golden-1-center
#KIOSK_AGENT_LOCATION_ID=
KIOSK_AGENT_POLL_INTERVAL_MS=4000

# OBS WebSocket connection details
OBS_ADDRESS=ws://127.0.0.1:4455
OBS_PASSWORD=changeme

# Scene names as they appear in OBS
OBS_SCENE_ATTRACT=Attract Loop
OBS_SCENE_COUNTDOWN=Countdown
OBS_SCENE_LIVE=Live Rip
OBS_SCENE_REVEAL=Highlight

# Auto-stream behaviour
OBS_AUTO_START_STREAM=true
OBS_AUTO_STOP_STREAM=true
OBS_AUTO_RECORD=false

# Optional kiosk secret header if needed
#KIOSK_AGENT_SECRET=d7fc2f1e61c797b651c24e9fb50ebd45

# Scanner automation
KIOSK_AGENT_SCANNER_ENABLED=true
KIOSK_AGENT_SCANNER_MIN_LENGTH=6
KIOSK_AGENT_SCANNER_COOLDOWN_MS=1500
KIOSK_AGENT_SCANNER_IDLE_RESET_MS=250
KIOSK_AGENT_COUNTDOWN_SECONDS=10
KIOSK_AGENT_LIVE_SECONDS=60
